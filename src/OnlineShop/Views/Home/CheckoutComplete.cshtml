@{
    ViewData["Title"] = "Checkout Complete";
}

<div class="d-flex p-2 flex-wrap gap-3">
    @foreach (var product in (List<Product>)ViewData["products"]!)
    {
        <div class="card" style="width: 18rem;   ">
            <img class="card-img-top" src="@product.Images" alt="">
            <div class="card-body">
                <h5 class="card-title text-dark text-center fw-bold">@product.Name</h5>
                <p class="card-subtitle text-center">@product.Description</p>
            </div>
            <ul class="list-group list-group-flush text-center">
                <li class="list-group-item-success fw-bold">@product.Price Fr.</li>
            </ul>
        </div>
    }
</div>